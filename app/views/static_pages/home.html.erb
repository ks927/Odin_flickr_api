<h1>Flickr Photo Feed</h1>
<%= form_tag('/', method: "get") do %>

  Flickr User Id:
  <%= text_field_tag :user_id %>

  <%= submit_tag "Submit" %>

<% end %>

<% if params[:user_id] %>
          <% user_photos(params[:user_id]).each do |photo| %>

            <%= link_to(image_tag(FlickRaw.url_q(photo), :class => 'flickr_photo', :title => photo.title, :border => 0, :size => '75x75')) %>
             
          <% end %>
<% end %>
